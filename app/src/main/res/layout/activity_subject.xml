<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    tools:context=".SubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Select Favourite Subject"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Select one or two subjects"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Mathematics"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/maths"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Physics"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/physics"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:text="Chemistry"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/chemistry"
                />
            <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:text="Economics"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:id="@+id/economics"
            />




            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:text="Commerce"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/commerce"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:text="Biology"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/biology"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:text="Civics"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/civics"

                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:text="History"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/history"
                />





            <Button
                android:id="@+id/submitbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="submit"
                android:textColor="@color/colorPrimary"
                />




        </LinearLayout>



    </LinearLayout>

</ScrollView>